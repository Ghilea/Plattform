{
  "name": "project",
  "version": "0.0.1",
  "description": "Platform to build website",
  "main": "public/index.php",
  "author": "Ghilea",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-react": "^7.16.7",
    "open-props": "^1.3.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "autoprefixer": "^9.4.4",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^3.1.14"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "scripts": {
    "build:sass": "sass --no-source-map src/sass:public/css",
    "build:react": "babel src/react/default.js --out-dir src/react/",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:php": "copyfiles -u 1 ./src/*.php public",
    "copy": "npm-run-all --parallel copy:*",
    "start": "npm-run-all copy --parallel",
    "webpack": "weback",
    "build": "npm-run-all webpack copy:* build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  }
}
