{
  "name": "project",
  "version": "0.0.1",
  "description": "Platform to build website",
  "main": "public/index.php",
  "author": "Ghilea",
  "dependencies": {
    "open-props": "^1.3.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^3.1.14",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-react": "^7.16.7",
    "sass": "^1.49.8",
    "npm-run-all": "^4.1.5",
    "nodemon": "^2.0.15",
    "copyfiles": "^2.4.1"
  },
  "scripts": {
    "watch": "nodemon --exec \"npm run build\"",
    "build:sass": "sass --no-source-map src/sass:public/css",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:php": "copyfiles -u 1 ./src/php/**/* public",
    "copy:robots": "copyfiles -u 1 ./src/robots.txt public",
    "copy:htaccess": "copyfiles -u 1 ./src/.htaccess public",
    "copy": "npm-run-all --parallel copy:*",
    "start": "npm-run-all copy --parallel",
    "webpack": "webpack",
    "build": "npm-run-all webpack copy:* build:*"
  },
    "nodemonConfig": {
    "watch": ["src/*"],
    "ext": "js,php,jsx,sass,scss", 
    "ignore": ["public/*"],
    "delay": 2500
  }
}